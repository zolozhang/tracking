{
  "openapi": "3.0.0",
  "info": {
    "title": "Milestone Service API",
    "description": "API for querying milestone progress in professional format",
    "version": "1.0.0",
    "contact": {
      "name": "Service Support",
      "email": "icil_sup@icil.net"
    }
  },
  "servers": [
    {
      "url": "http://10.180.3.148:7136",
      "description": "Development server"
    }
  ],
  "paths": {
    "/milestone/queryMilestonePro": {
      "post": {
        "summary": "Query milestone progress in professional format",
        "description": "Retrieve detailed milestone information with enhanced professional formatting and data structure",
        "operationId": "queryMilestonePro",
        "tags": ["milestone"],
        "requestBody": {
          "description": "Query parameters for milestone search",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/QueryMilestoneRequest"
              },
              "example": {
                "bookingNo": "BK20230001",
                "officeCode": "HKG01",
                "milestoneType": "SHIPMENT_STATUS",
                "dateFrom": "2023-01-01",
                "dateTo": "2023-12-31"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LimosaResponse"
                },
                "example": {
                  "code": 200,
                  "message": "Success",
                  "data": {
                    "milestones": [
                      {
                        "id": "ML001",
                        "bookingNo": "BK20230001",
                        "milestoneCode": "BOOKING_CONFIRMED",
                        "milestoneName": "Booking Confirmed",
                        "status": "COMPLETED",
                        "plannedDate": "2023-01-15",
                        "actualDate": "2023-01-14",
                        "description": "Booking has been confirmed by carrier",
                        "office": "HKG01",
                        "lastUpdated": "2023-01-14T10:30:00Z"
                      }
                    ],
                    "summary": {
                      "totalMilestones": 8,
                      "completed": 3,
                      "inProgress": 2,
                      "pending": 3,
                      "delayed": 0
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "code": 400,
                  "message": "Invalid parameters provided"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Authentication required",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "code": 401,
                  "message": "Authentication required"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "code": 500,
                  "message": "Internal server error occurred"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "QueryMilestoneRequest": {
        "type": "object",
        "properties": {
          "bookingNo": {
            "type": "string",
            "description": "Booking reference number",
            "example": "BK20230001"
          },
          "officeCode": {
            "type": "string",
            "description": "Office location code",
            "example": "HKG01"
          },
          "milestoneType": {
            "type": "string",
            "description": "Type of milestone to query",
            "example": "SHIPMENT_STATUS"
          },
          "dateFrom": {
            "type": "string",
            "format": "date",
            "description": "Start date for milestone search",
            "example": "2023-01-01"
          },
          "dateTo": {
            "type": "string",
            "format": "date",
            "description": "End date for milestone search",
            "example": "2023-12-31"
          }
        },
        "required": ["bookingNo", "officeCode"]
      },
      "LimosaResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32",
            "description": "Response status code"
          },
          "message": {
            "type": "string",
            "description": "Response message"
          },
          "data": {
            "type": "object",
            "description": "Response data payload"
          }
        },
        "required": ["code", "message"]
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32",
            "description": "Error status code"
          },
          "message": {
            "type": "string",
            "description": "Error message"
          }
        },
        "required": ["code", "message"]
      }
    }
  }
}
